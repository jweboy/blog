# http://editorconfig.org
root = true

[*]
charset = utf-8 # 文件编码
indent_style = space # 缩进类型
indent_size = 2 # 代码缩进
end_of_line = lf # 换行符格式
insert_final_newline = true # 是否在文件最后插入一个空行
trim_trailing_whitespace = true # 是否删除行尾空格

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
